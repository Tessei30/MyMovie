

<%= form_with model: movie, local: true  do |f| %>
  <div class="form-group">
    <%= f.label :title, "Title" %>
    <%= f.text_field :title, class: 'form-control movie_title' %>
  </div>

  <div class="form-group">
    <%= f.label :body_title, "Comment Title" %>
    <%= f.text_field :body_title, class: 'form-control movie_body_title'  %>
  </div>

  <div class="form-group">
    <%= f.label :bdy, "Comment" %>
    <%= f.text_area :bdy, class: 'form-control movie_body'%>
  </div>

  <div class="action row btn">
    <%= f.submit "Share", class: 'btn btn-warning btn-block' %>
  </div>
<% end %>